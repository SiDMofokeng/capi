                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Education"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Income"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Employment"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Fertility"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Housing, Household Goods and Services"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>

                                <!-- Simulated Bottom Border -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#C2C2C2"
                                         WidthRequest="290"
                                         HorizontalOptions="Start" />
                            </StackLayout>
                            <StackLayout Spacing="0" Padding="15,0,0,0">
                                <!-- Frame with Title -->
                                <Frame BackgroundColor="#F0F3F8"
                                       Padding="0,15,0,15"
                                       HasShadow="False"
                                       Margin="0"
                                       HorizontalOptions="FillAndExpand"
                                       CornerRadius="0">
                                    <Label Text="Agricultural Activities and Food Security"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#344562" />
                                </Frame>
                            </StackLayout>

                        </StackLayout>
                    </Frame>



                    <!-- Right Content Section -->
                    <Grid Grid.Column="1" Padding="20,0,0,0" RowSpacing="20" VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Top: Form/Card -->
                            <RowDefinition Height="Auto" />
                            <!-- Middle: Next Button -->
                            <RowDefinition Height="*" />
                            <!-- Spacer: takes all remaining space -->
                            <RowDefinition Height="Auto" />
                            <!-- Bottom: End Interview -->
                        </Grid.RowDefinitions>

                        <!-- Top: Form -->
                        <Frame Grid.Row="0"
                               Padding="20"
                               BorderColor="White"
                               CornerRadius="8"
                               HasShadow="True"
                               BackgroundColor="White">

                            <StackLayout Spacing="20">

                                <!-- Title -->
                                <Label Text="Household Member Information"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#344562"
                                       HorizontalOptions="Start" />

