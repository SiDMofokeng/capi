                                       TextColor="#2D2D2D"
                                       LineBreakMode="WordWrap" />

                                <!-- Button -->
                                <Button Text="Add New"
                                        BackgroundColor="#628BCE"
                                        TextColor="White"
                                        WidthRequest="180"
                                        HeightRequest="48"
                                        CornerRadius="8"
                                        HorizontalOptions="Start"
                                        Clicked="AddMember_Clicked"
                                        />
                            </StackLayout>

                        </Frame>


                        <!-- Middle: Next Button -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <BoxView Grid.Column="0" />
                            <Button Grid.Column="1"
                                    Text="Next"
                                    BackgroundColor="#628BCE"
                                    TextColor="White"
                                    WidthRequest="150"
                                    HeightRequest="48"
                                    CornerRadius="8" />
                        </Grid>

                        <!-- Bottom: End Interview Button aligned to bottom -->
                        <Grid Grid.Row="3"
                              VerticalOptions="EndAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <BoxView Grid.Column="0" />
                            <Button Grid.Column="1"
                                    Text="End Interview"
                                    BackgroundColor="#315CA3"
                                    TextColor="White"
                                    WidthRequest="150"
                                    HeightRequest="48"
                                    CornerRadius="8" />
                        </Grid>
                    </Grid>


                </Grid>
            </StackLayout>
        </Grid>
