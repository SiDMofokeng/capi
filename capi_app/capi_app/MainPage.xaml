<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="capi_app.MainPage"
             BackgroundColor="#F6F6F6"
             Padding="0">

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: Background + Gradient + Bottom Text -->
        <Grid Grid.Column="0"
              RowSpacing="0"
              ColumnSpacing="0"
              Padding="0"
              >
            <!-- Background image -->
            <Image Grid.Row="0"
           Source="banner.png"
           Aspect="AspectFill" />

            <!-- Gradient overlay, properly constrained -->
            <BoxView Grid.Row="0"
             InputTransparent="True">
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                        <GradientStop Color="#000000" Offset="0.0" />
                        <GradientStop Color="#0300003D" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Text content -->
            <StackLayout Grid.Row="0"
                 VerticalOptions="End"
                 HorizontalOptions="Center"
                 Padding="20"
                 Margin="0,0,0,60"
                 InputTransparent="True">
                <Label Text="Get started now !"
               TextColor="White"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center" />
                <Label Text="Start making a difference today."
               TextColor="White"
               FontSize="16"
               HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>

        <!-- RIGHT COLUMN: Centered Form + Footer -->
        <Grid Grid.Column="1"
      BackgroundColor="#F6F6F6"
      RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <!-- Centered Form Content -->
            <StackLayout Grid.Row="0"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 WidthRequest="400"
                 Spacing="30"
                 Padding="30">

                <!-- Form Title -->
                <StackLayout>
                    <Image Source="logo.png"
                   WidthRequest="220"
                   HeightRequest="100"
                   HorizontalOptions="Start"
                  />
                   <Label Text="Log In"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   />
                    <Label Text="Debug: 3 Interviews"
                   FontSize="14"
                   TextColor="Black"
                   />
                </StackLayout>

                <!-- Form Fields -->
                <StackLayout Spacing="15">

                    <!-- Picker (custom-select with SVG arrow as icon) -->
                    <Grid>
                        <Frame CornerRadius="8"
                       Padding="0"
                       BackgroundColor="#EAEDF2"
                       HasShadow="False">
                            <Picker Title="CAPI"
                            HeightRequest="48"
                            FontSize="14"
                            Margin="10,0"
                            BackgroundColor="Transparent"
                            TextColor="#7C7C7C"
                            TitleColor="#7C7C7C">
                                <Picker.Items>
                                    <x:String>ADMIN</x:String>
                                    <x:String>USER</x:String>
                                    <x:String>GUEST</x:String>
                                </Picker.Items>
                            </Picker>
                        </Frame>

                        <!-- SVG arrow positioned on top-right (Image overlay) -->
                        <Image Source="ChevronDown.png"
                       WidthRequest="20"
                       HeightRequest="20"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Margin="0,0,12,0"
                       InputTransparent="True" />
                    </Grid>

                    <!-- Username -->
                    <Frame 
                   CornerRadius="8"
                   Padding="0"
                   BackgroundColor="#EAEDF2"
                   HasShadow="False">
                        <Entry x:Name="usernameEntry" 
                       Placeholder="Username"
                       ReturnType="Next"
                       HeightRequest="48"
                       BackgroundColor="Transparent"
                       TextColor="#7C7C7C"
                       FontSize="14"
                       Margin="10,0" />
                    </Frame>

                    <!-- Password -->
                    <Frame CornerRadius="8"
                   Padding="0"
                   BackgroundColor="#EAEDF2"
                   HasShadow="False">
                        <Entry x:Name="passwordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       ReturnType="Done"
                       HeightRequest="48"
                       BackgroundColor="Transparent"
                       TextColor="#7C7C7C"
                       FontSize="14"
                       Margin="10,0" />
                    </Frame>

                    <!-- Login Button -->
                    <Button x:Name="loginButton"
                    Text="Login"
                    BackgroundColor="#315CA3"
                    TextColor="White"
                    HeightRequest="48"
                    CornerRadius="8" 
                    Clicked="loginButton_Clicked"
                    />
                </StackLayout>
            </StackLayout>

            <!-- Footer -->
            <StackLayout Grid.Row="1"
                 BackgroundColor="Black"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="End"
                 HeightRequest="70">
                <Label Text="© Statistics South Africa Privacy Policy Security"
               TextColor="White"
               FontSize="14"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </Grid>

    </Grid>

</ContentPage>
